<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field col s12" style="height: 3rem;">
    <label>
      <%= form.check_box :completed, id: :task_completed %>
      <span>Completed</span>
    </label>
  </div>

  <div class="input-field col s12">
    <%= form.label :title %>
    <%= form.text_field :title, id: :task_title %>
  </div>

  <div class="input-field col s12">
    <%= form.label :due_date %>
    <%= form.text_field :due_date, :class => 'datepicker' %>
  </div>

  <div class="input-field col s12">
    <%= form.label :categories %>
    <%= select_tag "task[categories]", options_from_collection_for_select(categories, "id", "name", task.categories.map { |c| c.id }), multiple: true, id: "task_categories" %>
  </div>

  <div class="actions">
    <%= form.submit :class => 'waves-effect waves-light btn' %>
  </div>
<% end %>
