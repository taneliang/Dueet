<div class="container">
  <h1>Aiken Dueet</h1>

  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Due</th>
      </tr>
    </thead>
    <% @tasks.each do |task| %>
      <tr>
        <td>
          <input type="checkbox"
                 <%= task.completed and "checked='checked'" %>
                 taskid=<%= task.id %>
                 id=<%= task.id.to_s + "completion" %> />
          <label for=<%= task.id.to_s + "completion" %>></label>
        </td>
        <td><%= task.title %></td>
        <td><%= task.due %></td>
        <td><%= link_to 'Destroy', task_path(task),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>

  <div class="row">
    <%= form_with scope: :task, url: tasks_path, local: true do |form| %>
      <div class="input-field col s12">
        <%= form.label :title %><br>
        <%= form.text_field :title %>
      </div>

      <div class="input-field col s12">
        <%= form.label :due %><br>
        <%= form.text_field :due, :class => 'datepicker' %>
      </div>

      <div class="input-field col s12">
        <%= form.submit :class => 'waves-effect waves-light btn' %>
      </div>
    <% end %>
  </div>
</div>
